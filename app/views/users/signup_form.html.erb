<h1>新規登録</h1>

<%= form_tag("/signup") do %>
  <div>ユーザー名</div>
  <input name="name">

  <div>ID</div>
  <input name="email">
  
  <div>パスワード<div>
  <input name="password">
  
  <input type="submit" value="新規登録">
<% end %>


<h1>会員一覧</h1>
<% @users.each do |user|%>
  <%= user.name %>
  <%= user.email %>
  <%= user.password %><br>
<% end %>