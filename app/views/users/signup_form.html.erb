<h1>新規登録</h1>

<%= form_tag("/signup") do %>
  <div>ユーザー名</div>
  <input name="name">

  <div>ID</div>
  <input name="email">
  
  <div>パスワード<div>
  <input name="password">
  
  <input type="submit" value="新規登録">
<% end %>


<h1>会員一覧</h1>
<% @users.each do |user|%>
  <%= image_tag("/user_images/#{user.image}", size: "50x50")%>
  <%= user.name %>
  <%= user.email %>
  <%= user.password %>
  <%= button_to "削除","/user_delete/#{user.id}", method: :delete %><br>
<% end %>